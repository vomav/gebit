<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:form="sap.ui.layout.form">
   	<SelectDialog
		title="{i18n>users}"
		items="{toAllowedUsers}"
		search=".onValueHelpSearch"
		confirm=".onSelectUser"
		cancel=".onValueHelpClose">
		<StandardListItem
			iconDensityAware="false"
			iconInset="false"
			title="{name} {surname}"
			description="{email}" 
			/>
	</SelectDialog>
</core:FragmentDefinition>