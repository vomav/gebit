<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:form="sap.ui.layout.form"   
   xmlns:u="sap.ui.unified"
   xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
   
<IconTabBar
		select=".onFilterSelect">

<items>
			<IconTabFilter
				showAll="true"
				text="{i18n>All}"
				key="All" />
			<IconTabSeparator />
			<IconTabFilter
				icon="sap-icon://in-progress"
				iconColor="Neutral"
				text="{i18n>inProgress}"
				key="InProgress" />
			<IconTabFilter
				icon="sap-icon://check-availability"
				iconColor="Positive"
				text="{i18n>available}"
				key="Available" />

</items>
		<content>
   <Table id="groupTerrirtoryParts" items="{
         path:'toPartAssignments',
         parameters : {
            operationMode : 'Client'
         },
         sorter:[{
               path: 'name',
               descending: false
            }]
      }"> 
      <columns>
         <Column>
				<Text text="{i18n>name}"/>
			</Column>
         <Column>
				<Text text="{i18n>isDone}"/>
			</Column>
         <Column demandPopin="true" minScreenWidth="600px">
				<Text text="{i18n>assignedTo}"/>
			</Column>
         <Column demandPopin="true">
				<Text text="{i18n>actions}"/>
			</Column>
         <Column demandPopin="true">
				<Text text="Upload"/>
			</Column>
         <Column demandPopin="true">
				<Text text="Covered map"/>
			</Column>
      </columns>
      <items>
         <ColumnListItem
						type="Inactive"
						press="onPressListItem" app:coord="{coordinates}">
						<cells>
							<Text text="{name}"/>
                     <CheckBox selected="{isDone}"></CheckBox>
                     	<MultiInput enabled="true"
                           tokens="{
                              path: 'inWorkBy',
                              sorter: { path: 'surname' }
                           }" 
                           enableTableAutoPopinMode="true" 
                           showValueHelp="false"
                           tokenUpdate="onUpdateMultiValueUpdate">
                           <tokens>
                              <Token key="{id}" text="{= ${surname} +', '+ ${username}}" />
                           </tokens>
                        </MultiInput>
               	   <Button
                        icon="sap-icon://action"
                        class="sapUiSmallMargin"
                        press="onActionButtonPress"
                        type="Transparent"
                        ariaHasPopup="Menu" >
                        <dependents>
                           <core:Fragment
                              id="nestedActions"
                              fragmentName="ui5.gebit.app.fragment.MyPartsActionsheet"
                              type="XML" />
                        </dependents>
                     </Button>
                     <u:FileUploader
                        name="coveredMapImageFileUploader"
                        uploadUrl="uploadImage"
                        tooltip="Upload your file to the local server"
                        uploadComplete="handleUploadComplete"
                        change="onFileChange"
                        typeMissmatch="handleTypeMissmatch"
                        style="Emphasized"
                        fileType="jpg,png"
                        buttonOnly="true" 

                        placeholder="Choose a file for Upload...">
                           <u:parameters>
                              <u:FileUploaderParameter
                                 name="Accept-CH"
                                 value="Viewport-Width"/>
                              <u:FileUploaderParameter
                                 name="Accept-CH"
                                 value="Width"/>
                              <u:FileUploaderParameter
                                 name="Accept-CH-Lifetime"
                                 value="86400"/>
                           </u:parameters>
                        </u:FileUploader>
                        <Image src="{imageUrl}" width="50px" height="50px"></Image>
						</cells>
			</ColumnListItem>
      </items>
   </Table>
</content>
	</IconTabBar>
</core:FragmentDefinition>