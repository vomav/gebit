<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:form="sap.ui.layout.form"   
   xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
   
<IconTabBar id="idIconTabBar"
		select=".onFilterSelect">

<items>
			<IconTabFilter
				showAll="true"
				text="{i18n>All}"
				key="All" />
			<IconTabSeparator />
			<IconTabFilter
				icon="sap-icon://in-progress"
				iconColor="Neutral"
				text="{i18n>inProgress}"
				key="InProgress" />
			<IconTabFilter
				icon="sap-icon://check-availability"
				iconColor="Positive"
				text="{i18n>available}"
				key="Available" />

</items>
		<content>
   <Table id="groupTerrirtoryParts" items="{
         path:'toPartAssignments',
         parameters : {
            operationMode : 'Client'
         },
         sorter:[{
               path: 'name',
               descending: false
            }]
      }"> 
      <columns>
         <Column>
				<Text text="{i18n>name}"/>
			</Column>
         <Column>
				<Text text="{i18n>isDone}"/>
			</Column>
         <Column>
				<Text text="{i18n>assignedTo}"/>
			</Column>
         <Column>
				<Text text="{i18n>actions}"/>
			</Column>
      </columns>
      <items>
         <ColumnListItem
						type="Inactive"
						press="onPressListItem" app:coord="{coordinates}">
						<cells>
							<Text text="{name}"/>
                     <CheckBox selected="{isDone}"></CheckBox>
                     <VBox>
                        <Text text="{userName}" ></Text>
                        <Text text="{surname}"></Text>
                     </VBox>
               	   <Button
                        icon="sap-icon://action"
                        class="sapUiSmallMargin"
                        press="onActionButtonPress"
                        type="Transparent"
                        ariaHasPopup="Menu" >
                        <dependents>
                           <core:Fragment
                              fragmentName="ui5.gebit.app.fragment.MyPartsActionsheet"
                              type="XML" />
                        </dependents>
                     </Button>
						</cells>
			</ColumnListItem>
      </items>
   </Table>
</content>
	</IconTabBar>
</core:FragmentDefinition>