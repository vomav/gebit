<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:l="sap.ui.layout"
   xmlns:f="sap.ui.layout.form">
   	<Dialog
		title="{i18n>edit}">
	<l:HorizontalLayout class="sapUiContentPadding" >
		<Input placeholder="{i18n>enterTheNamePlaceholder}" showSuggestion="true" startSuggestion="2"
			suggestionItems="{
                              path: 'toAllowedUsers',
                              sorter: { path: 'surname' }
                           }" width="100%"
			suggestionItemSelected="onSuggestedAssignedUserSelected"
			change="onAssignedUserChangeEvent">
			<suggestionItems>
				 <core:Item key="{user_ID}" text="{surname} {name}" />
			</suggestionItems>
		</Input>
		<Button text="{i18n>assignToMe}" press="assignPartToMe"/>
	</l:HorizontalLayout>

	<l:VerticalLayout class="sapUiContentPadding" width="100%">
	<Tokenizer width="100%" editable="true" tokenDelete="onPatchAssignmentTokenDelete" tokens="{
			path: 'inWorkBy',
			sorter: { path: 'surname' },
			templateShareable: true
		}">
	<Token key="{id}" text="{= !${freestyleName} ? ${surname} +', '+ ${username} : ${freestyleName} }" />
	</Tokenizer>
	<StepInput description="{i18n>count}" value="{path: 'count', suspended: false}"></StepInput>
	</l:VerticalLayout>
		<beginButton>
			<Button text="{i18n>done}" press="onCloseEditTerritoryPatchDialog"></Button>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>