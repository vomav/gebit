
<mvc:View
	controllerName="ui5.gebit.app.controller.GroupTerritoriesWorklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:core="sap.ui.core"
	>

	<semantic:SemanticPage
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>groupTerritories}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="groupTerritoriesWorklistTable"
				width="auto"
				items="{
					path: '/PublicTerritoryAssignments'
				}"
				noDataText="{i18n>noData}"
				growing="true"
				growingScrollToLoad="true"
				>

				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer />
						<SearchField
							search=".onSearch"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>
				<infoToolbar>
					<Toolbar>
						<Title id="groupTerritoryCountTitle"/>
						<ToolbarSpacer />
					</Toolbar>
				</infoToolbar>
				<columns>
					<Column>
						<Text text="{i18n>title}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="600px">
						<Text text="{i18n>site}"/>
					</Column>
					<Column hAlign="End" demandPopin="true" minScreenWidth="600px">
						<Text text="{i18n>startedDate}"/>
					</Column>
					<Column hAlign="End" demandPopin="true" minScreenWidth="600px">
						<Text text="{i18n>finishedDate}"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPressListItem">
						<cells>
							<Link
								text="{name}" href="{link}"/>
							<Text text="{site}" />	
							 <Text text="{
								path: 'startedDate',
								formatter: '.formatStartEndDate'
							}" />
							<Text text="{
								path: 'finishedDate',
								formatter: '.formatStartEndDate'
							}" />
						</cells>
						<customData>
							<core:CustomData id="tenantDiscriminator" value="{tenantDiscriminator}" />
						</customData>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			
		</semantic:sendEmailAction>

	</semantic:SemanticPage>

</mvc:View>