
<mvc:View
	controllerName="ui5.gebit.app.controller.TerritoryWorklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="territoriesTable"
				width="auto"
				items="{
					path: '/Territories'
				}"
				noDataText="{i18n>noData}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished"

				>

				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer />
						<SearchField
							search=".onSearch"
							width="auto">
						</SearchField>

						<Button
							id="addUserButton"
							icon="sap-icon://add"
							tooltip="{i18n>createButtonText}"
							press="openCreateDialog">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
				
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column>
						<Text text="{i18n>title}"/>
					</Column>
					<Column>
						<Text text="{i18n>assignedTo}" />
					</Column>
					<Column>
						<Text text="{i18n>siteId}" />
					</Column>

					<Column hAlign="End">
						<Text text="{i18n>lastTimeWorked}"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPressListItem">
						<cells>
							<Link
								text="{name}" href="{link}"/>
							<Text text="{assignedToName} {assignedToSurname} " />
							<Text text="{siteName}" />
							<Text text="{lastTimeWorked}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			
		</semantic:sendEmailAction>

	</semantic:SemanticPage>

</mvc:View>