
<mvc:View
	controllerName="ui5.gebit.app.controller.TerritoryWorklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>

	<IconTabBar	tabDensityMode="Compact" stretchContentHeight="true" select="onFilterSelect">
		<items>
			<IconTabFilter
				showAll="true"
				text="All"
				key="All" />
			<IconTabSeparator />
			<IconTabFilter
				icon="sap-icon://addresses"
				iconColor="Positive"
				text="{i18n>available}"
				key="Available" />
			<IconTabFilter
				icon="sap-icon://kpi-managing-my-area"
				iconColor="Critical"
				text="{i18n>assigned}"
				key="Assigned" />
			<IconTabFilter
				icon="sap-icon://cancel-maintenance"
				iconColor="Negative"
				text="{i18n>notReady}"
				key="NotReady" />
		</items>
		<content>
			<Table
				id="territoriesTable"
				width="auto"
				items="{
					path: '/Territories'
				}"
				noDataText="{i18n>noData}"
				growing="true"
				growingScrollToLoad="true"
				selectionChange="onSelectionChange"
				mode="SingleSelectLeft"
				>

				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer />
						<Button
							tooltip="{i18n>sort}"
							icon="sap-icon://sort"
							press="handleSortButtonPressed"/>
						<SearchField
							id="territorySearchField"
							search="onSearch"
							width="auto">
						</SearchField>

						<Button
							id="addTerritoryButton"
							icon="sap-icon://add"
							press="openCreateDialog">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
						<Button
							id="deleteTerritoryButton"
							icon="sap-icon://delete"
							press="onDelete"
							enabled="false">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column width="16rem">
						<Text text="{i18n>title}"/>
					</Column>
					<Column width="6rem">
						<Text text="{i18n>isReady}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="600px" width="auto">
						<Text text="{i18n>assignedTo}" />
					</Column>
					<Column demandPopin="true" minScreenWidth="600px" width="10rem">
						<Text text="{i18n>siteId}" />
					</Column>
					<Column hAlign="End" demandPopin="true" minScreenWidth="600px" width="auto">
						<Text text="{i18n>lastTimeWorked}"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPressListItem">
						<cells>
							<Link
								text="{name}" href="{link}"/>
							<!-- <Text text="{= ${assignedUnregisteredUser} == undefined ? ${assignedUnregisteredUser} : ${assignedToName} ${assignedToSurname} }" /> -->
							<core:Icon
								src="{ path:'isReady', formatter:'.formatIconByReadiness', targetType:'sap.ui.model.odata.type.Boolean' }"
								>
								<core:layoutData>
									<FlexItemData growFactor="1" />
								</core:layoutData>
							</core:Icon>
							<Text text="{= !!${assignedUnregisteredUser} ? ${assignedUnregisteredUser} : ${assignedToName} + ' ' + ${assignedToSurname}}" />
							<Text text="{siteName}" />
							<Text text="{lastTimeWorked}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</IconTabBar>
		</semantic:content>

		<semantic:sendEmailAction>
			
		</semantic:sendEmailAction>

	</semantic:SemanticPage>

</mvc:View>