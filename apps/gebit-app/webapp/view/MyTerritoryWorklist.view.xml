
<mvc:View
	controllerName="ui5.gebit.app.controller.MyTerritoryWorklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>myTerritories}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="myTerritoriesTable"
				width="auto"
				items="{
					path: '/TerritoryAssignments'
				}"
				noDataText="{i18n>noData}"
				growing="true"
				growingScrollToLoad="true"
				>

				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							search=".onSearch"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column>
						<Text text="{i18n>name}" id="nameColumnTitle"/>
					</Column>
					<Column hAlign="End">
						<Text text="{i18n>startedDate}"/>
					</Column>
					<Column hAlign="End">
						<Text text="{i18n>finishedDate}"/>
					</Column>
					<Column hAlign="End">
						<Text text="{i18n>type}"/>
					</Column>
					<Column hAlign="End">
						<Text text="{i18n>isDone}"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPressListItem">
						<cells>
							<Link
								text="{name}" href="{link}"/>
							
							<Text text="{startedDate}" />
							<Text text="{finishedDate}" />
							<Text text="{type}" />
							<CheckBox selected="{isDone}" />	
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			
		</semantic:sendEmailAction>

	</semantic:SemanticPage>

</mvc:View>