<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:form="sap.ui.layout.form"
	controllerName="ui5.gebit.app.controller.TerritoryDetail"
	height="100%">
	<ObjectPageLayout enableLazyLoading="false" upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{name}" wrapping="true"/>
				</expandedHeading>

				<actions>
					<m:Button text="{i18n>edit}" type="Emphasized" press="onEditButton" visible="{= !${uiModel>/ui/editMode}}"/>
					<m:Button text="{i18n>display}" type="Emphasized" press="onDisplayMode" visible="{uiModel>/ui/editMode}"/>
					<m:Button type="Transparent" text="Delete" press="onDeleteTerritory" visible="{= !${isReady}}" />
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<sections>
			<ObjectPageSection titleUppercase="false" title="General Information">
				<subSections>
					<ObjectPageSubSection titleUppercase="false" visible="{uiModel>/ui/editMode}" >
						<form:SimpleForm 
							editable="true"
							layout="ResponsiveGridLayout"
							labelSpanXL="4"
							labelSpanL="3"
							labelSpanM="4"
							labelSpanS="12"
							adjustLabelSpan="false"
							emptySpanXL="0"
							emptySpanL="4"
							emptySpanM="0"
							emptySpanS="0"
							columnsXL="2"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false"
							ariaLabelledBy="Title1" >
							<form:content>
								<m:Label text="{i18n>name}"/>
								<m:Input value="{name}" />
								<m:Label text="{i18n>link}" />
								<m:Input  value="{link}"/>
								<m:Label text="{i18n>isReady}" />
								<m:Switch  state="{isReady}"/>
								<m:Label text="{i18n>lastTimeWorked}" />
								<m:DatePicker dateValue="{lastTimeWorked}"/>
							</form:content>
						</form:SimpleForm>
					</ObjectPageSubSection>
					<ObjectPageSubSection titleUppercase="false" visible="{= !${uiModel>/ui/editMode}}">
						<form:SimpleForm 
							editable="false"
							layout="ResponsiveGridLayout"
							labelSpanXL="4"
							labelSpanL="3"
							labelSpanM="4"
							labelSpanS="12"
							adjustLabelSpan="false"
							emptySpanXL="0"
							emptySpanL="4"
							emptySpanM="0"
							emptySpanS="0"
							columnsXL="2"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false"
							ariaLabelledBy="Title1" >
							<form:content>
								<m:Label text="{i18n>name}"/>
								<m:Link href="{link}" text="{name}"/>
								<m:Label text="{i18n>isReady}" />
								<m:Switch state="{isReady}" enabled="false"/>
								<m:Label text="{i18n>lastTimeWorked}" />
								<m:Text text="{lastTimeWorked}"/>
							</form:content>
						</form:SimpleForm>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="{i18n>parts}">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<core:Fragment fragmentName="ui5.gebit.app.reuse.territories.fragment.TarritoryPartsTable" type="XML" />
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			 <!-- <ObjectPageSection titleUppercase="false" title="{i18n>map}">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<core:HTML content="{path:'link', formatter:'.formatLinkToEmbedHtml'}" />
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection> -->
		</sections>
	</ObjectPageLayout>
</mvc:View>
