<mvc:View
	controllerName="ui5.gebit.app.controller.Login"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
			xmlns:f="sap.f">

			<f:DynamicPage preserveHeaderStateOnScroll="true" showFooter="true" fitContent="true">

			<f:content> 
	<VBox class="sapUiSmallMargin">
		<form:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<form:toolbar>
				<Toolbar>
					<Title text="{i18n>login}"/>
				</Toolbar>
			</form:toolbar>
			<form:content>
				<Label text="{i18n>email}" />
				<Input id="login_loginInput" value="{name}" />
				<Label text="{i18n>password}" />
				<Input type="Password" id="login_passwordInput" value="{surname}"/>
			</form:content>
		</form:SimpleForm>
		
		</VBox>
	</f:content>
				<f:footer>
				<OverflowToolbar>

					<ToolbarSpacer/>
					<Button type="Accept" text="Login" press="login"/>
				</OverflowToolbar>
			</f:footer>
		</f:DynamicPage>
</mvc:View>
