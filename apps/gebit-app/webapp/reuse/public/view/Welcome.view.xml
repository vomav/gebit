<mvc:View
	controllerName="ui5.gebit.app.reuse.public.controller.Welcome"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
			xmlns:f="sap.f"
	>
		<VBox class="sapUiSmallMargin">
				<IllustratedMessage enableVerticalResponsiveness="false" illustrationType="sapIllus-SearchEarth" title="Welcome" description=" ">
					<additionalContent>
						<Button text="{i18n>loginLabel}" width="100%" press="toLogin" />
						<Button text="{i18n>registerButton}" width="100%" press="toRegister" />
					</additionalContent>
				</IllustratedMessage>
		</VBox>
</mvc:View>
