<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:form="sap.ui.layout.form">
   <Dialog
      id="helloDialog"
      title ="{i18n>createNewTerritory}" bindingContexts="uiModel>/create">
	  <content>
	  	<VBox class="sapUiSmallMargin">
		<form:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<form:content>
				<Label text="{i18n>name}" />
				<Input value="{uiModel>name}" />
				<Label text="{i18n>link}" />
				<Input value="{uiModel>link}" />
			</form:content>
		</form:SimpleForm>
		</VBox>
	  </content>
      <beginButton>
         <Button
            text="{i18n>create}"
            press="createTerritory"/>
      </beginButton>
	  <endButton>
              <Button
            text="{i18n>close}"
            press="closeCreateDialog"/>
      </endButton>
   </Dialog>
</core:FragmentDefinition>