<core:FragmentDefinition
   xmlns:core="sap.ui.core"
   xmlns="sap.m"
   xmlns:u="sap.ui.unified"
   xmlns:form="sap.ui.layout.form">
   <Dialog
      
      title ="{i18n>addUserByEmail}">
	  <content>
	  	<VBox class="sapUiSmallMargin">
			
		<form:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<form:content>
				<Label text="{i18n>email}" />
				<Input value="{uiModel>/sites/createMapping/email}"></Input>
				<Label text="{i18n>role}" />
				<Select selectedItemId="display" selectedKey="{uiModel>/sites/createMapping/mappingType}">
					<core:Item key=" " text="{i18n>select}" />
					<core:Item key="display" text="{i18n>user}" />
					<core:Item key="admin" text="{i18n>administrator}" />
				</Select>

			</form:content>
		</form:SimpleForm>

		</VBox>
	  </content>
      <beginButton>
         <Button
            text="{i18n>create}"
            press="addUserToSiteByEmail"/>
      </beginButton>
	  <endButton>
              <Button
            text="{i18n>close}"
            press="closeAddUserToSiteDialog"/>
      </endButton>
   </Dialog>
</core:FragmentDefinition>